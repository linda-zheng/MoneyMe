<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="23sp"
        android:text="You are at the mall with your\nfriends, pick one of the following\nto purchase."
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnHat" />

    <Button
        android:id="@+id/btnHat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="The Perfect Pink Hat\n$15" />

    <Button
        android:id="@+id/btnJacket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHat"
        android:layout_centerHorizontal="true"
        android:text="The Beautiful Bomber Jacket\n$25" />

</RelativeLayout>